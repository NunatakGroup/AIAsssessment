<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/modern-normalize/2.0.0/modern-normalize.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slider.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="dark-mode">
    <!-- Background Effects -->
    <div class="dynamic-background">
        <div class="gradient-sphere"></div>
        <div class="gradient-sphere"></div>
        <div class="gradient-sphere"></div>
    </div>
    <div class="grid-overlay"></div>
        <div class="scan-line"></div>

    <!-- Navigation -->
    <nav class="main-nav">
        <div class="nav-logo">
            <a href="/home" class="logo-link">
                <img src="~/images/Nunatak-AI-Lab.png" alt="Logo" class="logo-image">
            </a>
        </div>
        <button class="nav-toggle" aria-label="Toggle navigation">
            <span></span>
            <span></span>
            <span></span>
        </button>
        <div class="nav-links">
            <a href="https://www.nunatak.com/ueber-uns/">About us</a>
            <a href="https://www.nunatak.com/expertise/">Expertise</a>
            <a href="https://www.nunatak.com/themen/">Topics</a>
            <a href="https://www.nunatak.com/news/">News</a>
            <a href="https://www.nunatak.com/karriere/">Careers</a>
            <a href="https://www.nunatak.com/academy/">Academy</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/NavbarViewController.js" asp-append-version="true"></script>
    <script src="~/js/globalEffects.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>